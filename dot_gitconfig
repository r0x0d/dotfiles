# Taken from https://github.com/bruxisma/dotfiles/blob/main/git/config
[include]
    path = ~/.gitconfig.extended
[init]
  defaultBranch = main
[push]
  default = simple
[log]
  date = iso
[color]
  ui = auto
[core]
  fsmonitor = true
  autocrlf = input
  editor = nvim
  excludesFile = ~/.gitignore
[fetch]
  prune = true
  pruneTags = true
[rebase]
  autosquash = true
[merge]
  tool = nvim
  conflictstyle = diff3
  prompt = false
[diff]
  colormoved = default
  algorithm = histogram
[alias]
  amend = commit --amend
  pushf = push -force-with-lease
  branches = branch -a
  commits = log --graph --decorate --pretty=oneline --abbrev-commit
  fixup = commit --fixup
  purge = !git branch -vv | rg --trim '(\\S+).*: gone].*' -r '$1' | xargs -r git branch -D
  remotes = remote -v
  squash = commit --squash
  st = status
  stat = status
  tags = tag
  undo = reset --soft HEAD~1
  smartlog = log --graph --pretty=format:'commit: %C(bold red)%h%Creset %C(red)[%H]%Creset %C(bold magenta)%d %Creset%ndate: %C(bold yellow)%cd %Creset%C(yellow)%cr%Creset%nauthor: %C(bold blue)%an%Creset %C(blue)[%ae]%Creset%n%C(cyan)%s%n%Creset'
  recent = !git branch --sort=-committerdate --format='%(committerdate:relative)%09%(refname:short)' | head -10
  amendpush = add . && commit --amend --no-edit && push origin HEAD -f
  whatadded = log --diff-filter=A
  aliases = !git config --global --get-regexp '^alias[.]' | rg --invert-match '^alias[.]aliases' | rg --regexp='^alias[.](\\w+) ' --replace='$1 \t=> $2' | column -t -s '\t'
[rerere]
  enabled = true
[credential "https://github.com"]
    helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
    helper = !/usr/bin/gh auth git-credential
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
[credential]
	helper = "!f() { /home/r0x0d/.vscode-server/bin/0f0d87fa9e96c856c5212fc86db137ac0d783365/node /tmp/vscode-remote-containers-2f562681-11f9-4b23-bd0d-9290bee9ce74.js git-credential-helper $*; }; f"
